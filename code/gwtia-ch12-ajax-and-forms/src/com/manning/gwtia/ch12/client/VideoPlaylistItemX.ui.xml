<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .top {border:2px solid #E3E3E3}
    .rightSide {width:400px}
    .title {font-weight:bold}
    .image{margin:4px 4px 0 2px; border:1px solid #000}
  </ui:style>
  
  <g:HorizontalPanel addStyleNames="{style.top}">
    <g:Image ui:field="image" addStyleNames="{style.image}"/>
    <g:VerticalPanel addStyleNames="{style.rightSide}">
      <g:Anchor ui:field="title" addStyleNames="{style.title}"/>
      <g:Label ui:field="desc" wordWrap="true" />
    </g:VerticalPanel>
  </g:HorizontalPanel>

</ui:UiBinder> 
