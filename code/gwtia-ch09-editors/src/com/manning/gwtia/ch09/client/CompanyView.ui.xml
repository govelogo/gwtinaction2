<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dt='urn:import:com.manning.gwtia.ch09.client'>
	<ui:with type="com.manning.gwtia.ch09.client.CompanyView.Resources" field="resources" />
	<ui:style src="common.css"/>
	<g:HTMLPanel>
<g:DockLayoutPanel unit="PX" height="100%" width="100%">
	<g:west size="185.0">
		<g:ScrollPanel alwaysShowScrollBars="true">
			<g:FlowPanel addStyleNames="{style.navPanel}">
				<g:HTMLPanel styleName="{style.logo}"><a href="http://manning.com"><g:Image resource="{resources.logo}" /></a></g:HTMLPanel>
				<g:Label addStyleNames="{style.title}">Examples</g:Label>
				<g:HTML styleName="{style.divider}" />
				  <g:Button addStyleNames="{style.button}" ui:field="introPanelButton">Introduction</g:Button>
				<g:Button addStyleNames="{style.button}" ui:field="employeesButton">Employees</g:Button>
				<g:Button addStyleNames="{style.button}" ui:field="phoneBookButton">Phone book</g:Button>
				<g:HTML styleName="{style.divider}" />
				<g:Button addStyleNames="{style.button}" ui:field="contactButton">Contacts</g:Button>
				<g:Button addStyleNames="{style.button}" ui:field="listAllContactsButton">List contacts</g:Button>
				<g:Button addStyleNames="{style.button}" ui:field="listAllContactsButton2">List contacts 2</g:Button>
				<g:HTML styleName="{style.divider}" />
				<g:HTML styleName="{style.divider}" />
				<g:HTML styleName="{style.divider}" />
				<g:HTMLPanel styleName="{style.website}"><a href="http://manning.com">Click here to<br /><b>buy</b> the book,<br /><b>read</b> the forums,<br /><b>download</b> the source,<br />and more!</a></g:HTMLPanel>
			</g:FlowPanel>
		</g:ScrollPanel>
	</g:west>
	<g:center margin="100px">
		<g:SimplePanel>
			<g:ScrollPanel width="100%" height="100%">
			    <g:FlowPanel ui:field="examplesPanel"  />
			</g:ScrollPanel>
		</g:SimplePanel>
	</g:center>
</g:DockLayoutPanel>
</g:HTMLPanel>
</ui:UiBinder> 