<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.manning.gwtia.ch16.client.di.ui">


<ui:style>
.panel {
	width: 100%;
	height: 100%;
}
</ui:style>

<g:DockLayoutPanel unit="PX"  addStyleNames="{style.panel}">
   <g:north size="22">
   		<my:AppMenuBar></my:AppMenuBar>
   </g:north>
   <g:center>
     <g:FlowPanel  addStyleNames="{style.panel}">
		<g:Label>GWTiA MVP PhotoApp Example</g:Label>
		<g:Label>Click the Show Photos button below to see a grid of photos, click on a photo to do more</g:Label>
		<g:Button text="Show Photos" ui:field="showPhotos"></g:Button>
   	 </g:FlowPanel>
   </g:center>
</g:DockLayoutPanel>

</ui:UiBinder>