<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  	<servlet>
		<servlet-name>themeServlet</servlet-name>
		<servlet-class>com.manning.gwtia.ch05.server.ResourceServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>themeServlet</servlet-name>
		<url-pattern>/gwtia_ch05_clientbundles/CSSResourceService</url-pattern>
	</servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Gwtia_ch05_clientbundles.html</welcome-file>
  </welcome-file-list>

</web-app>
