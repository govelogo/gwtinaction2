<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.manning.gwtia.ch15.client.mvp.ui">


<ui:style>
.panel {
	width: 100%;
	height: 100%;
}
</ui:style>

<g:DockLayoutPanel unit="PX"  addStyleNames="{style.panel}">
   <g:north size="22">
   		<my:AppMenuBar></my:AppMenuBar>
   </g:north>
   <g:center>
     <g:FlowPanel addStyleNames="{style.panel}">
		<g:Label><ui:msg>GWTiA MVP PhotoApp Example</ui:msg></g:Label>
		<g:Label><ui:msg>Click the Show Photos button below to see a grid of photos, click on a photo to do more</ui:msg></g:Label>
		<g:Button ui:field="showPhotos"><ui:msg>Show Photos</ui:msg></g:Button>
		<g:Button ui:field="showPhotosText"><ui:msg>Show Text List of Photos</ui:msg></g:Button>
   	 </g:FlowPanel>
   </g:center>
</g:DockLayoutPanel>

</ui:UiBinder>