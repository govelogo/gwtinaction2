<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.manning.gwtia.ch15.client.mvp.ui">


<ui:style>
.panel {
	width: 100%;
	height: 100%;
}
</ui:style>

<g:DockLayoutPanel unit="PX"  addStyleNames="{style.panel}">
   <g:north size="22">
   		<my:AppMenuBar></my:AppMenuBar>
   </g:north>
   <g:center>
   		<g:ScrollPanel ui:field="container" addStyleNames="{style.panel}">
   		<g:FlowPanel>
   		   	<g:Button ui:field="listView">List View</g:Button>
   			<g:FlexTable ui:field="display">		   			
   			</g:FlexTable>
   		</g:FlowPanel>
   		</g:ScrollPanel>
   </g:center>
</g:DockLayoutPanel>
</ui:UiBinder>