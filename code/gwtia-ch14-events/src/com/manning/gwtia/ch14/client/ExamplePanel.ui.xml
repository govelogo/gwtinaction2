<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

<ui:with type="com.manning.gwtia.ch14.client.ExamplePanel.Resources" field="resources" />

<ui:style>
.button {
	width: 100%;
}
.exampleArea {
	border-left: 1px solid #333333;
	padding: 10px;
}
.title {
	font-family: Verdana, sans-serif;
	color: #ffffff;
	font-weight: bold;
	font-size: 16px;
	text-align: center;
	padding: 5px 0;
	background-color: #323B38;
}
.navPanel {
	background: #EEEEEE;
}
.divider {
	height: 10px;
	background: #999999;
}
.website {
	background-color: #DF1B1B;
	font-family: Verdana, sans-serif;
	font-size: 12px;
	text-align: center;
	padding: 10px 0;
}
.website b {
	font-size: 14px;
}
.website a {
	text-decoration: none;
	color: #ffffff;
}
.logo {
	background-color: #ffffff;
	height: 93px;
}	
</ui:style>

<g:DockLayoutPanel unit="PX">
	<g:west size="180">
			<g:FlowPanel addStyleNames="{style.navPanel}">
				<g:HTMLPanel styleName="{style.logo}"><a href="http://manning.com/tacy/"><g:Image resource="{resources.logo}" /></a></g:HTMLPanel>
				<g:Label addStyleNames="{style.title}">Examples</g:Label>
				<g:HTML styleName="{style.divider}" />
				<g:Button addStyleNames="{style.button}" ui:field="introPanel">Introduction</g:Button>
				<g:HTML styleName="{style.divider}" />
				<g:Button addStyleNames="{style.button}" ui:field="showHandling">Event Handling</g:Button>
				<g:Button addStyleNames="{style.button}" ui:field="sinkingEvent">Event Sinking</g:Button>
				<g:Button addStyleNames="{style.button}" ui:field="eventEfficiency">Event Efficiency</g:Button>
				<g:Button addStyleNames="{style.button}" ui:field="showPreviewing">Event Previewing</g:Button>
				<g:Button addStyleNames="{style.button}" ui:field="preventDefault">Prevent Default</g:Button>
				<g:HTML styleName="{style.divider}" />
				<g:Button addStyleNames="{style.button}" ui:field="eventBus">EventBus</g:Button>				
				<g:HTML styleName="{style.divider}" />
				<g:HTMLPanel styleName="{style.website}"><a href="http://manning.com/tacy/">Click here to<br /><b>buy</b> the book,<br /><b>read</b> the forums,<br /><b>download</b> the source,<br />and more!</a></g:HTMLPanel>
			</g:FlowPanel>
	</g:west>
	<g:center>
		<g:SimplePanel ui:field="exampleArea"  addStyleNames="{style.exampleArea}"/>
	</g:center>
</g:DockLayoutPanel>

</ui:UiBinder>