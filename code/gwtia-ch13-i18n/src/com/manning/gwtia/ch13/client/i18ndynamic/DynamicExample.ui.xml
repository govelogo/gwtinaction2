<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
<ui:style>
.title{
	font-size : 14pt;
}

.instr{
	font-size : 8pt;
}

.inline{
	display : inline;
}

.screen{
	font-size : 12pt;
	color: gray;
}

.toolbar{
		background-color: #dddddd;
		color: black;
}

.info{
	font-size : 10pt;
	padding: 20px;
}

</ui:style>


<g:DockLayoutPanel unit="PX">
	<g:north size="45">
		<g:FlowPanel>
			<g:Label ui:field="title" addStyleNames="{style.title}">GWTiA Static Internationalization Example</g:Label>
			<g:Label ui:field="details" addStyleNames="{style.instr}">Change the locale below to see the difference</g:Label>
		</g:FlowPanel>
	</g:north>
	<g:south size="100">
		<g:FlowPanel addStyleNames="{style.toolbar}">
			<g:Label addStyleNames="{style.inline}">Select locale:</g:Label>
			<g:ListBox ui:field="locale"></g:ListBox>
		</g:FlowPanel>
	</g:south>
</g:DockLayoutPanel>

</ui:UiBinder>
